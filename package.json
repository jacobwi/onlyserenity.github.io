{
  "name": "onlyserenity.github.io",
  "version": "1.0.0",
  "main": "server.js",
  "author": {
    "name": "Jacob William",
    "url": "https://jacobwi.io/"
  },
  "repository": "https://github.com/onlyserenity/onlyserenity.github.io.git",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server --exec babel-node",
    "build": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "pretty": "prettier --write \"./**/*.{js,jsx,json}\""
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "nodemailer": "^6.4.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "concurrently": "^4.1.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1"
  }
}
